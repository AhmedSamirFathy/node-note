<%- include('header.ejs') %> 

    <div class="container my-5 py-5">
        <% if (exists.length!=0) { %>
         <div class="alert alert-danger text-center my-3">
             Emai; Already Exists
         </div>
        <% } %>
        <div class="col-md-5 m-auto text-center">
            <form action="/handleSignUp" method="POST">
                <div class="form-group">
                    <input value="<%= oldInputs?oldInputs.name:'' %>" placeholder="Enter your name" name="name" type="text" class=" form-control" />
                    <% if (error.find(e=>e.param=='name')) { %>
                    <div class="alert alert-danger">
                        Invalid Input
                    </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input value="<%= oldInputs?oldInputs.email:'' %>" placeholder="Enter email" type="email" name="email" class="form-control" />
                    <% if (error.find(e=>e.param=='email')) { %>
                        <div class="alert alert-danger">
                            Invalid Input
                        </div>
                        <% } %>
                        
                </div>
                <div class="form-group">
                    <input value="<%= oldInputs?oldInputs.password:'' %>" placeholder="Enter you password" type="password" name="password" class="form-control" />
                    <% if (error.find(e=>e.param=='password')) { %>
                        <div class="alert alert-danger">
                            Invalid Input <br> Password must at least contain 
                            <ul class="text-left">
                                <li>A lowercase letter</li>
                                <li>An uppercase letter</li>
                                <li>A special character</li>
                                <li>Numbers</li> 
                            </ul>
                        </div>
                        <% } %>
                </div>
                <div class="form-group">
                    <input value="<%= oldInputs?oldInputs.confirmPassword:'' %>" placeholder="confirm Password" type="password" name="confirmPassword" class="form-control" />
                    <% if (error.find(e=>e.param=='confirmPassword')) { %>
                        <div class="alert alert-danger">
                            Invalid Input
                        </div>
                        <% } %>
                </div>
                <button type="submit" class="btn btn-info w-100">SignUp</button>
            </form>
        </div>
    </div>

<%- include('footer.ejs') %> 